<%# app/views/sites/shared/inline_fields  %>

<% frame_id = dom_id(form.object, "#{method}_turbo_frame") %>

<turbo-frame id="<%= frame_id %>" class="contents">
  <%= yield %>

  <%= form.button class: "inline-action" do %>
    Save <%= form.object.class.human_attribute_name(method) %>
  <% end %>
  <%= link_to "Cancel", site_path(form.object), class: "inline-action" %>
</turbo-frame>