<section class="home-banner black-text"
    style="background-image: url(/static/blog-banner.png)">
    <div class="container">
        <div class="banner-content">
            <% frame_id = dom_id(@site, "headline_turbo_frame") %>
            <%= turbo_frame_tag frame_id do %>
                <h1 class="centered-text"><%= @site.headline %></h1>
                <%= link_to "Edit Headline", edit_site_path(@site) %>
            <% end %>
            <span class="description">
                <%= @site.tagline %>
            </span>
            <br>
            <div class="centered-flex-items">
                <button type="button" 
                    
                    class="btn btn-primary author-subscription-action" data-bs-toggle="modal"
                    data-bs-target="#subscribeModal" 
                    onclick="closeModal()">Subscribe</button>
                </div>


        </div>
    </div>
</section>